{
  "compilerOptions": {
    "composite": true,

    "target": "esnext",
    "moduleDetection": "force",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "strictNullChecks": true,
    "isolatedModules": true
  },
  "include": ["eslint.config.*", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
